<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:background="#000000">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp"
        android:backgroundTint="#000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:background="#000000">

            <ImageView
                android:id="@+id/row_iv_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/confused_student"
                tools:ignore="UnusedAttribute" />

            <ImageView
                android:id="@+id/like_iv_img"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                tools:ignore="UnusedAttribute"
                android:src="@drawable/ic_action_like_blue"
                android:scaleType="centerCrop"
                android:layout_below="@+id/authorTV"
                android:layout_toRightOf="@+id/row_iv_img"/>

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="60dp"
                android:textSize="14sp"
                tools:text="Harry Potter"
                android:maxLines="2"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@+id/row_iv_img"/>

            <TextView
                android:id="@+id/authorTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="60dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                tools:text="J.K.Rowling"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_below="@+id/titleTV"
                android:layout_toRightOf="@+id/row_iv_img"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>

